<%- include ('../../components/header.ejs') %>
<%- include ('../../components/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
    <hr>
    
    
    <table class="table table-bordered">
        <!-- Cabeçalho -->
        <thead>
            <!-- 
                tr == linha
                th == coluna
             -->
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <!-- Corpo -->
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                        <form  method="POST" action="/categories/delete" style="display: inline;"
                        onsubmit="confirmDelete(event, this)">
                            <!-- Ao clicar em deletar, enviamos o id pelo input -->
                            <input type="hidden" name="id" value="<%= category.id %>">
                            
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
            <%  })%>
        </tbody>
    </table>
</div>
<%- include ('../../components/footer.ejs') %>
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decisao = confirm("Voce quer deletar esta categoria?");
        if(decisao){
            form.submit();
        }
    }
</script>