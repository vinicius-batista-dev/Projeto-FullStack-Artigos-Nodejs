<%- include ('../../components/navbar.ejs') %>

    <div class="container">
        <hr>
        <h3>Categorias</h3>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
             <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th></th>
                    </tr>
             <% }) %>
            </tbody>
        </table>
    </div>
